<!DOCTYPE html>
<html ng-app="app">
<head>
    <title>Rental Guns</title>
</head>
<body ng-controller="rentalController" class="container">
    <h2>This is a list of guns we have available to rent</h2>
    <div class="col-md-12 form-group" >
        Sort by Caliber:
        <select class="form-control" ng-change="filterCaliber()" ng-model="selectedItem">
            <option selected value="All">All Calibers</option>
            <option ng-repeat="product in products" value="{{product.Caliber}}">{{product.Caliber}}</option>
        </select>
    </div>
    <div ng-repeat="product in products">
        
        <div class="col-md-4 img-thumbnail">
            <img src="{{product.ImageLocation}}" height="200px" width="250px" />
            Manufacturer: {{product.Maker.Name}} <br />
            Name: {{product.Name}} <br />
            Caliber: {{product.Caliber}} <br />
            Magazine Capacity: {{product.MagazineCapacity}} rounds <br />
            <a href="{{product.Maker.Url}}{{product.Name}}" target="_blank">Get more Information about this gun</a>   <br />
        </div>
        

    </div>


    @Scripts.Render("~/bundles/angular")
</body>

</html>